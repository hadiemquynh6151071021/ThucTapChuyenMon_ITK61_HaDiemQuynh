@model Ceramics_Store.Models.THONGTINCUAHANG
@{ 
    CERAMICS_STOREEntities db = new CERAMICS_STOREEntities();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css
">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/StyleCSS/Layout.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row row-header">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                @*@Html.ActionLink(Model.TENCH, "Index", "Store", new { @class = "navbar-brand" })*@
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <a href="~/Views/Store/Login.cshtml">
                            <i class="fa-regular fa-user"></i>
                        </a>
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Ceramics Store</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body ">
                        <ul class="navbar-nav flex-grow-1 pe-3">
                            <li class="nav-item">
                                @Html.ActionLink("Trang chủ", "Index", "Home", new { @class = "nav-link active" })

                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Giới thiệu", "Introduction", "Home", new { @class = "nav-link" })
                            </li>
                            <li class="nav-item dropdown">
                                @Html.ActionLink("Sản phẩm", "", "", new { @class = "nav-link dropdown-toggle", role = "button", data_bs_toggle = "dropdown", aria_expanded = "false" })
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Bát", "", "", new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Đĩa", "", "", new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Khay", "", "", new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Khác", "", "", new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#croll-lienhe">Liên hệ</a>
                            </li>
                        </ul>
                        <form action="" class="search-bar mt-3">
                            <input type="text" placeholder="Tìm kiếm" name="q">
                            <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    <footer class="row row-footer" id="croll-lienhe">
        <div class="col-sm-4 information-content">
            <span class="title-footer">
                @Model.TENCH.ToLower()
            </span>
            <span class="small-devide">&mdash;&mdash;</span>
            <p class="address">
                Địa chỉ: @Model.DIACHI
            </p>
            <p class="phonenumber">
                Hotline: @Model.SDT
            </p>

        </div>
        <div class="col-sm-3 fanpage">
            <span class="title-footer">FANPAGE</span>
            <span class="small-devide">&mdash;&mdash;</span>
            <iframe class="showfanpage"
                    src=@Model.FLUGINPAGE
                    width="340" height="70" style="border:none;overflow:hidden" scrolling="no" frameborder="0"
                    allowfullscreen="true"
                    allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"></iframe>
        </div>
        <div class="col-sm-5 map">
            <span class="title-footer">MAP</span>
            <span class="small-devide">&mdash;&mdash;</span>
            <iframe class="showmap"
                    src=@Model.URLMAP
                    width="600" height="350" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>

