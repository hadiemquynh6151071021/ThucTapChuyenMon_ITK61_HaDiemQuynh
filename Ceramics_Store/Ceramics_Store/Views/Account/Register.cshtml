@model Ceramics_Store.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/StyleCSS/main.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Scripts/bootstrap.min.js")
</head>
<body class="signin-page">
    <section id="signinForm">
        <div class="form-box">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2>ĐĂNG KÝ</h2>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @*<div class="form-group input-box">
                        @Html.LabelFor(m => m.FullName)
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FullName)
                        </div>
                    </div>*@
                <div class="form-group input-box">
                    <i class="fa-solid fa-envelope"></i>
                    @Html.TextBoxFor(m => m.Email, new { required = true })
                    @Html.LabelFor(m => m.Email)
                </div>
                <div class="form-group input-box">
                    <i class="fa-solid fa-lock"></i>
                    @Html.PasswordFor(m => m.Password, new { required = true })
                    @Html.LabelFor(m => m.Password)
                </div>
                <div class="form-group input-box">
                    <i class="fa-solid fa-lock"></i>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { required = true })
                    @Html.LabelFor(m => m.ConfirmPassword)
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <button type="submit" class="btn btnsignin btn-primary">Đăng ký</button>
                    </div>
                </div>
            }
        </div>
    </section>


</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
