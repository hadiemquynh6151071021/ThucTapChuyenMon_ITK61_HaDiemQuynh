@model Ceramics_Store.Models.HINHANHSP

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout_admin.cshtml";
}

<main id="main" class="main">
    <h2>Thêm hình ảnh sản phẩm</h2>
    <form method="post" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Hình ảnh sản phẩm</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.TENANH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div id="previewContainer"></div>
                    @Html.TextBoxFor(model => model.TENANH, null, new { type = "file", @class = "form-control", id = "formFile", multiple = "multiple" })
                    @Html.ValidationMessageFor(model => model.TENANH, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>

    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>

</main>
@section scripts{
    <script>
        const fileInput = document.getElementById('formFile');
        const previewContainer = document.getElementById('previewContainer');

        fileInput.addEventListener('change', function () {
            const files = this.files;

            for (let i = 0; i < files.length; i++) {
                const file = files[i];

                if (file) {
                    const reader = new FileReader();

                    reader.addEventListener('load', function () {
                        const img = document.createElement('img');
                        img.setAttribute('src', this.result);
                        previewContainer.appendChild(img);
                    });

                    reader.readAsDataURL(file);
                }
            }
        });
    </script>
    }