@model IEnumerable<TeacherManager.Models.APPLICATION_LEAVE>

@foreach (var item in Model)
{
    <a class="dropdown-item d-flex align-items-center modalLink" href="/Admin/application_leave/details/@item.ID">
        <div class="mr-3">
            <div class="icon-circle bg-primary">
                <i class="fas fa-file-alt text-white"></i>
            </div>
        </div>
        <div>
            <div class="small text-gray-500">@item.STATUS</div>
            <span class="font-weight-bold">Nghỉ phép: @item.TEACHER.NAME</span>
        </div>
    </a>
}

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $("body").on("click", ".modalLink", function (e) {
                e.preventDefault();
                $('#exampleModal').modal('show');
                $.post($(this).attr("href"), function (data) {
                    $('#exampleModal .modal-body').html(data);
                });
            });
        });
    </script>
}

