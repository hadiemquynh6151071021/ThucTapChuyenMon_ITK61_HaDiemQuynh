@{
    ViewBag.Title = "Home Page";
}
@Styles.Render("~/Content/design/scss/styles.css")
<style>
    section {
        padding: 2rem 0;
    }

    .col-lg-8 {
        height: 500px;
        overflow-y: scroll;
    }

        .col-lg-8::-webkit-scrollbar {
            width: 6px;
            background-color: none;
        }

        .col-lg-8::-webkit-scrollbar-thumb {
            border-radius: 10px;
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
            background-color: #F5F5F5;
        }

    .view_all {
        display: flex;
        justify-content: center;
    }

    .click_view_all {
        align-self: center;
        color: #F8CD0A;
        font-weight: 700;
        font-size: 20px;
        text-decoration: none;
    }
</style>


<div class="header">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/images/slider/thanh-nien-xung-phong.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/slider/thuong-binh-liet-si.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/slider/thanh-nien-xung-phong.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
    </div>
</div>

<h3 class="title-comm"><span class="title-holder">TIN TỨC</span></h3>

<!-- About section-->
<section id="about">
    <div class="container px-4">
        <div class="row gx-4 justify-content-center">
            <div class="col-lg-8">
                @Html.Action("ListNewsReview", "NEWS")
            </div>
            <div class="col-xl-12 view_all">
                @Html.ActionLink("XEM THÊM", "Index", "NEWS")
                @*<a href="/news/" class="click_view_all"> XEM THÊM</a>*@
            </div>
        </div>
    </div>
</section>

<h3 class="title-comm"><span class="title-holder">THÔNG BÁO</span></h3>

<!-- Services section-->
<section class="bg-light" id="about">
    <div class="row px-4 justify-content-center">
        <div class="col-lg-8">
            @Html.Action("ListNotificationsReview", "NOTIFICATIONs")
            <div class="col-xl-12 view_all">
                @Html.ActionLink("XEM THÊM", "Index", "NOTIFICATIONs")
                @*<a href="/notifications/" class="click_view_all"> XEM THÊM</a>*@
            </div>
        </div>

    </div>
</section>



